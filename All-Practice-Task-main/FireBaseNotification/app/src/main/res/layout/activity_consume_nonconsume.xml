<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inAppPurchase.SubscriptionActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Consume10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_rec_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Consume20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_rec_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Consume10" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Consume50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_rec_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Consume20" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Consume100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_rec_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Consume50" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Consume200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_rec_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Consume100" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Consume500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_rec_oval"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Consume200" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>